<%= form_for(:ambassador, :url => {:action => "create"}, :html => {:multipart => true}) do |f| %>
            <%= f.text_field :name, placeholder: "Name" %> <br />
            <%= f.text_field :college, placeholder: "College" %> <br />
            <%= f.text_field :course,  placeholder: "Course" %> <br />
            <%= f.text_field :email, placeholder: "Email" %><br />
            <%= f.text_area :year,  placeholder: "Year" %> <br />
            <%= f.text_area :number,  placeholder: "Number" %> <br />
	    <input type="submit" value="Send">
	 <% end %>
